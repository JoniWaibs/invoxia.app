{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "postinstall": "prisma generate --schema=db/schema.prisma",
    "build": "npm run db:generate && tsc && tsc-alias && node scripts/fix-imports.js",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "start": "node dist/server.js",
    "dev": "tsx --tsconfig ./tsconfig.json src/server.ts",
    "test": "npm run db:generate && jest",
    "test:watch": "npm run db:generate && jest --watch",
    "test:coverage": "npm run db:generate && jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "db:generate": "prisma generate --schema=db/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=db/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=db/schema.prisma",
    "db:push": "prisma db push --schema=db/schema.prisma",
    "db:studio": "prisma studio --schema=db/schema.prisma",
    "services:start": "docker-compose up -d",
    "services:stop": "docker-compose down",
    "services:clean": "docker-compose down -v --remove-orphans",
    "services:logs": "docker-compose logs -f",
    "services:restart": "docker-compose restart"
  },
  "keywords": [],
  "author": "Jonatan Waibsnaider",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.16.1",
    "@types/jsonwebtoken": "^9.0.10",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.15.0",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
