{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@plugins/*": ["src/plugins/*"],
      "@models/*": ["src/models/*"],
      "@shared/*": ["src/shared/*"],
      "@repositories/*": ["src/repositories/*"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}